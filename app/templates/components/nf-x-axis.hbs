<line x1="0" y1="{{axisLineY}}" x2="{{width}}" y2="{{axisLineY}}"></line>

{{#each ticks as |tick|}}
  <g class="tick">
    {{#if useTemplate}}
      {{#nf-tick-label x=tick.x y=tick.labely}}
        {{yield tick}}
      {{/nf-tick-label}}
    {{else}}
      {{#nf-tick-label x=tick.x y=tick.labely}}
        <text>{{tick.value}}</text>
      {{/nf-tick-label}}
    {{/if}}

    <line x1="{{tick.x}}" y1="{{tick.y1}}" x2="{{tick.x}}" y2="{{tick.y2}}"></line>
  </g>
{{/each}}
